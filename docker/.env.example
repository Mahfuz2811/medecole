# Local Development Environment Variables
# Copy this file to .env.local and update with your settings

# MySQL Configuration (connects to your existing common-mysql-1 container)
DB_USER=root
DB_PASSWORD=secret
DB_NAME=medecole

# Redis Configuration (connects to your existing common-redis-1 container)
REDIS_PASSWORD=
REDIS_DB=0

# JWT Secret (for local development)
JWT_SECRET=local-dev-jwt-secret-key-change-in-production

# Server Configuration
BACKEND_PORT=8080
FRONTEND_PORT=3000
GIN_MODE=debug

# CORS Settings
FRONTEND_URL=http://localhost:3000

# Background Cleanup Service
CLEANUP_ENABLED=true
CLEANUP_INTERVAL=1m
CLEANUP_GRACE_PERIOD=2m

# Google OAuth Configuration (optional for local dev)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URL=http://localhost:8080/api/v1/auth/google/callback

# Frontend Environment Variables (must start with NEXT_PUBLIC_)
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1
NEXT_PUBLIC_PACKAGES_API_URL=http://localhost:8080/api
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id_here
NEXT_PUBLIC_ENABLE_TRADITIONAL_AUTH=true
