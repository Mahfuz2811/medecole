# MySQL Configuration
DB_HOST=mysql
DB_PORT=3306
DB_USER=quizora_user
DB_PASSWORD=strong_password_here
DB_NAME=quizora

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_strong_password
REDIS_DB=0

# JWT Secret (Generate a strong random secret)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-2024

# Server Configuration
BACKEND_PORT=8080
FRONTEND_PORT=3000
GIN_MODE=release

# CORS Settings
FRONTEND_URL=https://medecole.com

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URL=https://api.medecole.com/api/v1/auth/google/callback

# Frontend Environment Variables (must start with NEXT_PUBLIC_)
NEXT_PUBLIC_API_URL=https://api.medecole.com/api/v1
NEXT_PUBLIC_PACKAGES_API_URL=https://api.medecole.com/api
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id_here
NEXT_PUBLIC_ENABLE_TRADITIONAL_AUTH=false
